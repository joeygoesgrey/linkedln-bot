# Copy this file to .env and fill with your credentials

# LinkedIn Credentials (required)
LINKEDIN_USERNAME=
LINKEDIN_PASSWORD=

# AI API Keys (optional)
OPENAI_API_KEY=           # For AI-powered comments (engage stream)
GEMINI_API_KEY=           # For AI-powered post generation

# Browser Settings
HEADLESS=true             # Run browser in headless mode (true/false)
USE_GEMINI=true           # Enable Gemini for post generation (true/false)

# Marketing Mode (optional)
# When enabled, AI-generated posts and comments include a promotional tail
MARKETING_MODE=true       # Enable/disable promotional tails (true/false)
PROJECT_NAME=LinkedIn Bot
PROJECT_URL=https://github.com/joeygoesgrey/linkedln-bot
PROJECT_SHORT_PITCH=Human-like Selenium automation that posts or schedules content, tags people, attaches media, and runs AI-powered engagement loops.

# Advanced Marketing Settings (optional)
# PROJECT_PITCH=          # Full pitch (defaults to detailed description)
# PROJECT_CONTEXT=        # Context for AI to reference (defaults to full description)
# PROJECT_TAGLINE=        # Custom tagline (defaults to pitch + URL)
